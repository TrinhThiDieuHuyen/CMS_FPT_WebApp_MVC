@model IEnumerable<AcademicPortal.Models.CourseCategory>
@{
	ViewBag.Title = "Index";
}

<h2>View course categories</h2>
@if (User.IsInRole("staff"))
{
	<div class="btn btn-primary mb-3">
		<a href="/CourseCategory/Create" class="text-decoration-none text-white">
			<i class="fa fa-plus-circle"></i> New Course Category
		</a>
	</div>
}

<table id="Table" class="table">
	<thead class="">
		<tr>
			<th scope="auto"></th>
			<th scope="col">Name</th>
			<th scope="col">Description</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<th scope="row">@item.Id</th>
				<td>@item.Name</td>
				<td class="text-justify">@item.Description</td>
				<td style="width: 6rem">
					<a href="/CourseCategory/Details/@item.Id" class="btn btn-info">
						<i class="fa fa-info-circle"></i> Details
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>



